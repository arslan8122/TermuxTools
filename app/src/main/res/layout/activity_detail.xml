<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#182756"
    tools:context=".Detail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1C3173"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Termux Tools and Linux"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >


        <RelativeLayout
            android:id="@+id/rela"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- things to scroll -->

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:scrollbars="vertical"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="46dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"

                android:layout_marginBottom="15dp"
                android:background="#E8E6E6"
                app:srcCompat="@drawable/copy" />


        </RelativeLayout>
    <LinearLayout
        android:id="@+id/linView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30ssp"
        android:layout_marginRight="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_30ssp"
        android:paddingBottom="@dimen/_30ssp"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@id/rela"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        />


<!--    <com.google.android.ads.nativetemplates.TemplateView-->
<!--        android:id="@+id/my_template"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="417dp"-->

<!--        app:gnt_template_type="@layout/gnt_small_template_view"-->
<!--        app:layout_constraintTop_toBottomOf="@id/scrollView2"-->
<!--        tools:layout_editor_absoluteX="3dp"></com.google.android.ads.nativetemplates.TemplateView>-->

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</RelativeLayout>