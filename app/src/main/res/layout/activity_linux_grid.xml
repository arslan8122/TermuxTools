<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinuxGrid">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1C3173">

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Termux Tools and Linux"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/toolbar">


            <ImageButton

                android:id="@+id/imageButton7"

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="206dp"
                android:layout_marginTop="@dimen/_25sdp"

                android:layout_marginEnd="77dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/button"
                android:onClick="sendMessageLinux3"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/my_template"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/imageButton6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/v" />

            <ImageButton

                android:id="@+id/imageButton6"

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_30sdp"

                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/button"
                android:onClick="sendMessageLinux4"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/my_template"
                app:layout_constraintEnd_toStartOf="@+id/imageButton7"
                app:layout_constraintHorizontal_bias="0.093"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/f" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_22ssp"
                android:layout_marginTop="2dp"

                android:layout_marginBottom="46dp"
                android:text="Advance"
                android:textColor="@color/black"

                android:textFontWeight="600"
                app:layout_constraintBottom_toTopOf="@+id/my_template"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageButton7"
                app:layout_constraintTop_toBottomOf="@+id/imageButton7"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_29ssp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="46dp"
                android:text="Basic"
                android:textColor="@color/black"
                android:textFontWeight="600"
                app:layout_constraintBottom_toTopOf="@+id/my_template"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageButton6"
                app:layout_constraintTop_toBottomOf="@+id/imageButton6"
                app:layout_constraintVertical_bias="0.636" />

            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/my_template"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_350sdp"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.782" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <!--  This is your template view -->


</RelativeLayout>